<%= form_with(model: portfolio_item, local: true) do |form| %>

  <div class="form-group">
    <%= form.label :title %>
    <%= form.text_field :title , class: "form-control"%>
  </div>

  <div class="form-group">
    <%= form.label :subtitle %>
    <%= form.text_area :subtitle , class: "form-control"%>
  </div>

  <div class="form-group">
    <%= form.label :body %>
    <%= form.text_area :body , class: "form-control"%>
  </div>
  <h3>Technologies Used </h3>
  <ul>
    <%= form.fields_for :technologies do |technologies_form| %>
      <li class="form-group"> <%= technologies_form.label :name , class: "form-control"%></li>
      <li class="form-group"> <%= technologies_form.text_field :name , class: "form-control"%></li>
    <% end %>
  </ul>

  <div class="form-group">
    <%= form.submit class:"btn btn-primary btn-block"%>
  </div>
<% end %>
