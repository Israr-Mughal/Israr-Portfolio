<p id="notice"><%= notice %></p>

<%= image_tag @portfolio_item.main_image if !@portfolio_item.thumb_image.nil? %> 

<p>
  <strong>Title:</strong>
  <%= @portfolio_item.title %>
</p>

<em>
  <strong>Subtitle:</strong>
  <%= @portfolio_item.subtitle %>
</em>

<p>
  <strong>Body:</strong>
  <%= @portfolio_item.body %>
</p>

<p>
  <strong>Main Image:</strong>
  <%= @portfolio_item.thumb_image %>
</p>

<h3>Technologies List </h3>
<% @portfolio_item.technologies.each do |t| %>
  <p> <%= t.name%> </p>
<%end%>


<%= link_to 'Edit', edit_portfolio_path(@portfolio_item) %> |
