<h1>Anguler Portfolio Items</h1>

<%= link_to "Create New Item", new_portfolio_url%>
 <% @portfolio_items.each do |portfolio_item| %>
    <tr>
        <%= link_to portfolio_item.title, protfolio_show_path(portfolio_item) %>
        <p><%= portfolio_item.subtitle %></p>
        <p><%= portfolio_item.body %></p>
        <p><%= portfolio_item.main_image %></p>
        <%= image_tag portfolio_item.thumb_image if !portfolio_item.thumb_image.nil? %> 
        <%= link_to "Edit Item", edit_portfolio_url(portfolio_item) %>
        <%= link_to 'Delete Portfolio', portfolio_item, method: :delete, data: { confirm: 'Are you sure?' } %>
      <br>
        
    </tr>
<% end %>


